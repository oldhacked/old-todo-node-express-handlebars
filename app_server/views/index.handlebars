<section id="one">
    <div class="container wow fadeInUp">

       
        <div class="card-group">
            {{#each row}}
            
            <!-- card -->
          
            <div class="square">
            <div class="card col-xs-12 col-sm-6 ">
                <a href="/tasks/{{id}}">
                    
                    <div class="card-block ">
                    <h4 class="card-title">{{title}}</h4>
